@using Microsoft.AspNetCore.Components
@inject IJSRuntime JSRuntime

@if (IsVisible)
{
    <div class="modal-backdrop fade show" @onclick="Cancel"></div>
    <div class="modal d-block" tabindex="-1">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">@Title</h5>
                    <button type="button" class="btn-close" @onclick="Cancel"></button>
                </div>
                <div class="modal-body">
                    @if (!string.IsNullOrWhiteSpace(BodyText))
                    {
                        <p>@BodyText</p>
                    }
                    <input type="password" class="form-control" @bind="Password" @ref="inputRef" placeholder="Hasło" />
                </div>
                <div class="modal-footer">
                    <button class="btn btn-primary" @onclick="Confirm">Potwierdź</button>
                    <button class="btn btn-secondary" @onclick="Cancel">Anuluj</button>
                </div>
            </div>
        </div>
    </div>
}

@code {
    private bool IsVisible { get; set; } = false;
    private string Password { get; set; } = "";
    private ElementReference inputRef;

    private string Title { get; set; } = "Wpisz hasło";
    private string BodyText { get; set; } = "";
    private bool _shouldFocus;

    [Parameter] public EventCallback<string> OnConfirm { get; set; }
    [Parameter] public EventCallback OnCancel { get; set; }

    public async Task Show(string title = "Wprowadź hasło", string bodyText = "")
    {
        Title = title;
        BodyText = bodyText;
        Password = "";
        IsVisible = true;
        _shouldFocus = true;
        StateHasChanged();
    }

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (_shouldFocus)
        {
            _shouldFocus = false;
            await JSRuntime.InvokeVoidAsync("blazorFocus.focusElementRef", inputRef);
        }
    }

    private async Task Confirm()
    {
        await OnConfirm.InvokeAsync(Password);
        await Hide(); // just hide, don’t fire cancel
    }

    private async Task Cancel()
    {
        await Hide();
        if (OnCancel.HasDelegate)
        {
            await OnCancel.InvokeAsync();
        }
    }

    public Task Hide()
    {
        IsVisible = false;
        Password = "";
        StateHasChanged();
        return Task.CompletedTask;
    }
}
